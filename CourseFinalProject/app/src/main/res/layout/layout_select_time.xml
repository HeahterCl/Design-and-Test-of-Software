<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:text="@string/please_select_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="42sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_above="@+id/timeButton"
        android:background="@android:color/background_light"
        android:visibility="gone" />

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/timeButton"
        android:visibility="gone" />

    <Button
        android:text="2017-01-10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/dateButton"
        android:textSize="24sp"
        android:layout_marginEnd="35dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/timeButton" />

    <Button
        android:text="10: 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeButton"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/dateButton"
        android:layout_alignBottom="@+id/dateButton"
        android:layout_alignEnd="@+id/textView2" />

</RelativeLayout>